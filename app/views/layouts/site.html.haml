!!!
%html{ 'xml:lang' => 'en-US', :lang => 'pt-BR', :xmlns => 'http://www.w3.org/1999/xhtml' }
  %head
    %meta{ :content => 'text/html; charset=utf-8', 'http-equiv' => 'content-type' }
    %title Lumineiro
    = stylesheet_link_tag 'compiled/screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/print.css', :media => 'print'
    /[if IE]
      = stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'
    = javascript_include_tag 'jquery-1.4.2.min'
    = javascript_include_tag 'jquery-ui.min'
    = javascript_include_tag 'jquery.corners.min'
    = javascript_include_tag 'corners'

  %body.site
    #menu
      - if controller.action_name == 'index'
        %span.selected Início
      - else
        %span= link_to "Início", root_path

      - if controller.action_name == 'numbers'
        %span.selected Números
      - else
        %span= link_to "Números", numbers_path

      - if controller.action_name == 'history'
        %span.selected Histórico
      - else
        %span= link_to "Histórico", history_path

      - if controller.action_name == 'videos'
        %span.selected Vídeos
      - else
        %span= link_to "Vídeos", videos_path

      - if controller.action_name == 'photos'
        %span.selected Fotos
      - else
        %span= link_to "Fotos", photos_path

      - if controller.action_name == 'sponsors'
        %span.selected Apoio cultural
      - else
        %span= link_to "Apoio cultural", sponsors_path

      - if controller.action_name == 'contact'
        %span.selected Contato
      - else
        %span= link_to "Contato", contact_path
    #content
      = yield
      - link_to root_path do
        = image_tag 'logo.jpg', :id => 'logo'

