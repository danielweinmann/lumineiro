!!!
%html{ 'xml:lang' => 'en-US', :lang => 'pt-BR', :xmlns => 'http://www.w3.org/1999/xhtml' }
  %head
    %meta{ :content => 'text/html; charset=utf-8', 'http-equiv' => 'content-type' }
    %title Lumineiro
    = stylesheet_link_tag 'compiled/screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/print.css', :media => 'print'
    /[if IE]
      = stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'
    = javascript_include_tag 'jquery-1.4.2.min'
    = javascript_include_tag 'jquery-ui.min'
    = javascript_include_tag 'jquery.corners.min'
    = javascript_include_tag 'corners'

  %body.site
    #content
      .box.admin.login
        = render :partial => 'layouts/flash', :locals => { :flash => flash } unless flash.empty?
        = yield
      - link_to root_path do
        = image_tag 'logo.jpg', :id => 'logo'

